@{
    var title = Model.Title ?? T("Are you sure?");
    var message = Model.Message ?? T("Are you sure about this?");
}
<div id="confirmationDialog" class="modal" role="dialog" aria-labelledby="confirmationDialogTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 class="confirmationDialog-title">@title</h3>
            </div>
            <div class="confirmationDialog-message modal-body">
                @message
            </div>
            <div class="modal-footer">
                <a class="dialog-command-yes btn btn-primary">@T("Yes")</a>
                <a class="dialog-command-no btn btn-default" data-dismiss="modal" aria-hidden="true">@T("No")</a>
            </div>
        </div>
    </div>
</div>