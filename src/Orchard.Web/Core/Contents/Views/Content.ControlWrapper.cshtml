@using Orchard.ContentManagement;
@using Orchard.Core.Contents;
@if (AuthorizedFor(Permissions.EditContent) && Model.ContentItem.Id > 0) {
    <div class="content-control">
        <div class="manage-actions">@Display.EditorLink(ContentItem: Model.ContentItem, Value: T("Edit"), ReturnUrl: true)</div>
    @Display(Model.Child)
    </div>
}
else {
    @Display(Model.Child)
}