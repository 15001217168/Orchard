@model Orchard.Tokens.Settings.RssPartSettings
<fieldset>
    <span class="help-block">@T(" Use '-' to remove the tag, leave empty to keep untouched, or use the 'Text' text token for the current value.")</span>
    <div>
        <label for="@Html.FieldIdFor(m => m.Title)">@T("Title")</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            <span class="input-group-btn">
                <button data-toggle="dropdown" data-tokens="@Html.FieldIdFor(m => m.Title)" aria-haspopup="true" aria-expanded="false" class="btn btn-default" type="button"><i class="fa fa-leaf" aria-hidden="true"></i></button>
            </span>
        </div>
        <span class="help-block">@T("The title field of the RSS item.")</span>
    </div>
    <div>
        <label for="@Html.FieldIdFor(m => m.Link)">@T("Link")</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Link, new { @class = "form-control" })
            <span class="input-group-btn">
                <button data-toggle="dropdown" data-tokens="@Html.FieldIdFor(m => m.Link)" aria-haspopup="true" aria-expanded="false" class="btn btn-default" type="button"><i class="fa fa-leaf" aria-hidden="true"></i></button>
            </span>
        </div>
        <span class="help-block">@T("The link field of the RSS item")</span>
    </div>
    <div>
        <label for="@Html.FieldIdFor(m => m.Description)">@T("Description")</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            <span class="input-group-btn">
                <button data-toggle="dropdown" data-tokens="@Html.FieldIdFor(m => m.Description)" aria-haspopup="true" aria-expanded="false" class="btn btn-default" type="button"><i class="fa fa-leaf" aria-hidden="true"></i></button>
            </span>
        </div>
        <span class="help-block">@T("The description field of the RSS item. The content needs to be raw HTML, i.e. not encoded.")</span>
    </div>
    <div>
        <label for="@Html.FieldIdFor(m => m.Author)">@T("Author")</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
            <span class="input-group-btn">
                <button data-toggle="dropdown" data-tokens="@Html.FieldIdFor(m => m.Author)" aria-haspopup="true" aria-expanded="false" class="btn btn-default" type="button"><i class="fa fa-leaf" aria-hidden="true"></i></button>
            </span>
        </div>
        <span class="help-block">@T("The author field of the RSS item")</span>
    </div>
    <div>
        <label for="@Html.FieldIdFor(m => m.Category)">@T("Category")</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
            <span class="input-group-btn">
                <button data-toggle="dropdown" data-tokens="@Html.FieldIdFor(m => m.Category)" aria-haspopup="true" aria-expanded="false" class="btn btn-default" type="button"><i class="fa fa-leaf" aria-hidden="true"></i></button>
            </span>
        </div>
        <span class="help-block">@T("The category field of the RSS item")</span>
    </div>
    <div>
        <label for="@Html.FieldIdFor(m => m.Enclosure)">@T("Enclosure")</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Enclosure, new { @class = "form-control" })
            <span class="input-group-btn">
                <button data-toggle="dropdown" data-tokens="@Html.FieldIdFor(m => m.Enclosure)" aria-haspopup="true" aria-expanded="false" class="btn btn-default" type="button"><i class="fa fa-leaf" aria-hidden="true"></i></button>
            </span>
        </div>
        <span class="help-block">@T("The enclosure field of the RSS item. This is usually a html tag like <img>")</span>
    </div>
    <div>
        <label for="@Html.FieldIdFor(m => m.PubDate)">@T("PubDate")</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.PubDate, new { @class = "form-control" })
            <span class="input-group-btn">
                <button data-toggle="dropdown" data-tokens="@Html.FieldIdFor(m => m.PubDate)" aria-haspopup="true" aria-expanded="false" class="btn btn-default" type="button"><i class="fa fa-leaf" aria-hidden="true"></i></button>
            </span>
        </div>
        <span class="help-block">@T("The pubDate field of the RSS item")</span>
    </div>
    <div>
        <label for="@Html.FieldIdFor(m => m.Source)">@T("Source")</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Source, new { @class = "form-control" })
            <span class="input-group-btn">
                <button data-toggle="dropdown" data-tokens="@Html.FieldIdFor(m => m.Source)" aria-haspopup="true" aria-expanded="false" class="btn btn-default" type="button"><i class="fa fa-leaf" aria-hidden="true"></i></button>
            </span>
        </div>
        <span class="help-block">@T("The source field of the RSS item")</span>
    </div>

</fieldset>
