@model Orchard.ContentTypes.ViewModels.ListContentPartsViewModel

@{ Layout.Title = T("Content Parts").ToString(); }

<p class="breadcrumb">@Display.ActionLink(Value: T("Content Types"), Action: "index")@T(" &#62; ")@T("Content Parts")</p>
<div class="manage">
    @Display.ActionLink(Value: T("Create new part"), Action: "CreatePart", Controller: "Admin", Area: "Orchard.ContentTypes", Classes: new [] { "button", "primaryAction" })
</div>
@Display.List(Items: Model.Parts.Select(t => Html.DisplayFor(m => t)), Classes: "contentItems")