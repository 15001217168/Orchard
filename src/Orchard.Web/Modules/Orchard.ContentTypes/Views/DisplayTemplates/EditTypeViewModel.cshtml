@model Orchard.ContentTypes.ViewModels.EditTypeViewModel
@using Orchard.Core.Contents.Settings;
<div class="summary">
    <div class="properties">
        <h3>@Model.DisplayName</h3>@{ var creatable = Model.Settings.GetModel<ContentTypeSettings>().Creatable; }
        @if (creatable) {
        <p class="pageStatus">@Display.ActionLink(Value: T("Create New {0}", Model.DisplayName), Action: "Create", Area: "Contents", RouteValues: new { id = Model.Name })</p>
        }
    </div>
    <div class="related">@if (creatable) {
        @Display.ActionLink(Value: T("List Items"), Action: "List", Area: "Contents", RouteValues: new { id = Model.Name })@T(" | ")}
        @Display.ActionLink(Value: T("Edit"), Action: "Edit", Area: "Orchard.ContentTypes", RouteValues: new { id = Model.Name })
    </div>
</div>