@model Orchard.Layouts.ViewModels.BlueprintsIndexViewModel
@{
    var index = 0;
    Layout.Title = T("Elements");
    Layout.Tail.Add(New.ConfirmationDialog());
}
<div class="or-panel-main panel-default">
    @if (Model.Blueprints.Any()) {
        using (Html.BeginFormAntiForgeryPost()) {
            <div class="panel-heading">
                <fieldset>
                    <input id="bulkActions" name="@Html.NameOf(m => m.Options.BulkAction)" type="hidden" value="@Orchard.Layouts.ViewModels.ElementsBulkAction.None" />
                    <button name="submit.BulkEdit" type="submit" class="hidden" value="@T("Apply")">@T("Apply")</button>
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bolt"></i> @T("Bulk Actions") <span class="caret"></span>
                        </button>&nbsp;
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#" data-bulk-action-confirm="@T("Are you sure you want to delete these items?")" data-bulk-action="@Orchard.Layouts.ViewModels.ElementsBulkAction.Delete">@T("Delete").ToString()</a></li>
                        </ul>
                    </div>
                </fieldset>
                <div class="manage">
                    <a class="btn btn-primary" href="@Url.Action("Create", "BlueprintAdmin", new { area = "Orchard.Layouts" })"><i class="fa fa-plus"></i> @T("Create").Text</a>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="table-responsive table-with-footer">
                        <table class="table table-fw-widget data-table table-striped dataTable no-footer">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        <div class="or-checkbox or-select-all inline">
                                            <input id="checkAll" class="check-all" type="checkbox">
                                            <label class="check-all" title="@T("Select All")" for="checkAll"></label>
                                        </div>
                                    </th>
                                    <th class="text-nowrap">@T("Display Name")</th>
                                    <th>@T("Name")</th>
                                    <th>@T("Base Element")</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var blueprint in Model.Blueprints) {
                                    var checkboxId = Html.IdFor(m => m.Blueprints[index].Blueprint.Id);
                                    <tr>
                                        <td>
                                            <div class="or-checkbox">
                                                <input type="hidden" value="@(blueprint.Blueprint.Id)" name="@Html.FieldNameFor(m => Model.Blueprints[index].Blueprint.Id)" />
                                                <input id="@checkboxId" type="checkbox" value="true" name="@Html.FieldNameFor(m => Model.Blueprints[index].IsChecked)" />
                                                <label for="@checkboxId"></label>
                                            </div>
                                        </td>
                                        <td>@blueprint.Blueprint.ElementDisplayName</td>
                                        <td>@blueprint.Blueprint.ElementTypeName</td>
                                        <td>@blueprint.Blueprint.BaseElementTypeName</td>
                                        <td class="text-nowrap text-right">
                                            <a class="btn btn-default" href="@Url.Action("Properties", "BlueprintAdmin", new { id = blueprint.Blueprint.Id, area = "Orchard.Layouts" }, null)"><i class="fa fa-pencil-square-o"></i> @T("Properties")</a>
                                            <a class="btn btn-primary" href="@Url.Action("Edit", "BlueprintAdmin", new { id = blueprint.Blueprint.Id, area = "Orchard.Layouts" }, null)"><i class="fa fa-pencil-square-o"></i> @T("Edit")</a>
                                            <a class="btn btn-danger" href="@Url.Action("Delete", "BlueprintAdmin", new { id = blueprint.Blueprint.Id, area = "Orchard.Layouts" })" data-confirm="@T("Are you sure you want to delete this item?")"><i class="fa fa-trash"></i> @T("Delete")</a>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row or-datatable-footer">
                        <div class="col-sm-12">
                            @*@Display(Model.Pager)*@
                        </div>
                    </div>
                </div>
            </div>
        }
    } else {
        <div class="panel-body">
            <h3 class="no-content">
                @T("There is no layout element yet.")
                @Html.ActionLink(T("Add one now").Text, "Create", "BlueprintAdmin", new { Area = "Orchard.Layouts", ReturnUrl = Request.RawUrl })
            </h3>
        </div>
    }
</div>
