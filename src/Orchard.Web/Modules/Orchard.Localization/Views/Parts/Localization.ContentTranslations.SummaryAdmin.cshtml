@using Orchard.Core.Contents;
@using Orchard.Localization.Models;
@if (AuthorizedFor(Permissions.PublishContent)) {
Style.Require("LocalizationAdmin");
IEnumerable<LocalizationPart> localizations  = Model.Localizations;
<div class="content-localization">
    @if (localizations.Count() > 0) {
    <div class="content-localizations"><h4>@T("Translations:")</h4>@Display.List(Items: localizations.Select(c => Display.EditorLink(ContentItem: c, Value: c.Culture.Culture)), Classes: "localizations")</div>
    }
    <div class="add-localization">@Display.ActionLink(Value: T("+ New translation"), Action: "Translate", Controller: "Admin", Area: "Orchard.Localization", RouteValues: new { id = Model.MasterId })</div>
</div>
}