@*
    Model:
      ContentPart
*@

@using Orchard.Comments.Models;
@using Orchard.Utility.Extensions;

@{
    var comment = (Orchard.Comments.Models.CommentPart)Model.ContentPart;
}
@if (string.IsNullOrEmpty(comment.Record.SiteName)) {
    @comment.Record.Author
}
else {
    @Display.Link(Value: comment.Record.Author, Href: comment.Record.SiteName, Attributes: new { rel = "nofollow" })
}