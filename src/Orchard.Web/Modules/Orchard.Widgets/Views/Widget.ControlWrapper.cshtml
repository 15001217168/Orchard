@using Orchard.ContentManagement;
@using Orchard.Widgets;
@if (AuthorizedFor(Permissions.ManageWidgets)) {
    <div class="widget-control">
        <div class="manage-actions">@Display.EditLink(ContentItem: Model.ContentItem, Value: T("Edit"), ReturnUrl: true)</div>
    @Display(Model.Child)
    </div>
}
else {
    @Display(Model.Child)
}