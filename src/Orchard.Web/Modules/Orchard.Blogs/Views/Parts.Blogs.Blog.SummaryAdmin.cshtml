@using Orchard.Blogs.Extensions;
@using Orchard.Blogs.Models;
@using Orchard.ContentManagement;
@using Orchard.Utility.Extensions;
@{
    ContentItem contentItem = Model.ContentItem;
    BlogPart blog = (BlogPart)contentItem.Get(typeof(BlogPart));
}
@Display.Link(Href: Url.BlogForAdmin(blog), Value: T("List Posts"), Attributes: new { title = T("List Posts") } )@T(" | ")
@Display.Link(Href: Url.BlogPostCreate(blog), Value: T("New Post"), Attributes: new { title = T("New Post") })@T(" | ")