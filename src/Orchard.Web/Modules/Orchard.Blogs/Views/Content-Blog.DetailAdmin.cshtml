@using Orchard.Blogs.Extensions;
@using Orchard.Blogs.Models;

@{ Layout.Title = (string)Model.Title; }

@Display(Model.Header)
@Display(Model.Actions)
<div class="manage">@Display.Link(Href: Url.BlogPostCreate((BlogPart)Model.ContentItem.Get(typeof(BlogPart))), Value: T("New Post"), Classes: new [] { "add", "button", "primaryAction" })</div>
@Display(Model.Content)